<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".60"
                android:layout_height="40dp"
                android:text="job title"
                android:gravity="left|center_vertical"
                android:textAlignment="gravity"
                android:id="@+id/jobTitle"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/company"
                android:layout_toStartOf="@+id/company" />

            <TextView
                android:layout_width="0dp"

                android:layout_weight=".40"
                android:layout_height="40dp"
                android:text="company"
                android:gravity="left|center_vertical"
                android:textAlignment="gravity"
                android:id="@+id/company"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".60"
                android:layout_height="40dp"
                android:text="lastDayApply"
                android:gravity="left|center_vertical"
                android:textAlignment="gravity"
                android:id="@+id/lastDay"
                android:layout_below="@+id/jobTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/numApp"
                android:layout_toStartOf="@+id/numApp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".40"
                android:layout_height="40dp"
                android:text="number"
                android:gravity="left|center_vertical"
                android:textAlignment="gravity"
                android:id="@+id/numApp"
                android:layout_below="@+id/company"
                android:layout_alignRight="@+id/company"
                android:layout_alignEnd="@+id/company" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
